---
import Base from "../layouts/Base.astro";
import { getEntry } from "astro:content";

const demo = await getEntry("site", "demo-reel");
const id = demo.data.youtubeId;
---

<Base title="Demo Reel">
  <h1 style="margin: 22px 0 8px;">Demo Reel</h1>

  <div style="position:relative; padding-top:56.25%; border-radius:16px; overflow:hidden;">
    <iframe
      src={`https://www.youtube-nocookie.com/embed/${id}?rel=0`}
      title="Demo Reel"
      style="position:absolute; inset:0; width:100%; height:100%; border:0;"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
    ></iframe>
  </div>
</Base>

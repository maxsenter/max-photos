---
const { title } = Astro.props;
const path = Astro.url.pathname;
const linkClass = (href) => (path === href ? "active" : "");
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body class="site">
    <!-- ambient texture -->
    <div class="filmGrain" aria-hidden="true"></div>

    <div class="container">
      <header class="nav">
        <div class="navLeft">
          <a href="/" class={linkClass("/")}>Home</a>
          <a href="/film" class={linkClass("/film")}>Film</a>
          <a href="/photo" class={linkClass("/photo")}>Photo</a>
          <a href="/about" class={linkClass("/about")}>About</a>
        </div>
        <div class="navRight">
          <a href="/admin" class="adminLink">Admin</a>
        </div>
      </header>

      <main>
        <slot />
      </main>

      <footer class="footer">
        © {new Date().getFullYear()} • Astro / Cloudflare Pages
      </footer>
    </div>
  </body>
</html>
